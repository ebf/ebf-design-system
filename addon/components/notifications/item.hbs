<div class="ebf-notification">
  <div class="ebf-notification-icon">
    <Icon::Ebf @icon={{bs-default @icon "ebf-bell"}} />
  </div>
  <div class="ebf-notification-details">
    {{#if @title}}
      <p class="mb-1 font-weight-bolder">{{@title}}</p>
    {{/if}}

    {{#if @text}}
      <p class="mb-1">{{@text}}</p>
    {{/if}}

    {{#if @date}}
      <small class="text-muted">{{moment-format @date "LLL"}}</small>
    {{/if}}
  </div>
  {{#if @onDismiss}}
    <div class="ebf-notification-close">
      <Icon::Ebf @icon="ebf-plus p-1" @onClick={{disable-bubbling (fn @onDismiss)}} />
    </div>
  {{/if}}
</div>