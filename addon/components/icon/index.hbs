{{#if @tooltip}}
  <Icon::Ebf
    @icon={{@icon}}
    @prefix={{@prefix}}
    @size={{@size}}
    @spin={{@spin}}
    @onClick={{@onClick}}
    {{ref this "el"}}
    ...attributes
  />
  <BsTooltip @placement={{this.placement}} @triggerElement={{this.el}}>{{@tooltip}}</BsTooltip>
{{else}}
  <Icon::Ebf
    @icon={{@icon}}
    @size={{@size}}
    @spin={{@spin}}
    @onClick={{@onClick}}
    ...attributes
  />
{{/if}}