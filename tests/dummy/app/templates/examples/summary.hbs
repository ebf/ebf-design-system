            <stats.row @label="Strasse, Hausnummer" @value="Am Propsthof 49" />
            <stats.row @label="PLZ, Ort" @value="53121, Bonn" />        
            <stats.row @label="Land" @value="Deutschland" />        
          </Stats>
        </div>
      </div>
      <div class="row pt-7">
        <div class="col-12">      
          <Stats @title="Rechnungsmethode" @inline={{true}} as |stats|>
            <stats.row @label="Email" @value="max.mustermann@tuv.de" />                 
          </Stats>
        </div>
      </div>
      <div class="row pt-7">
        <div class="col-12">      
          <Stats @title="Kostenstelle" @inline={{true}} as |stats|>
            <stats.row @label="Kundenkontonummer" @value="0060964925" />                 
            <stats.row @label="Kostenstelle" @value="Lorem ipsum – Eingetragene Kostenstelle" />                 
            <stats.row @label="Kostenstellennutzer" @value="Lorem ipsum – Eingetragener Kostenstellennutzer" />                 
          </Stats>
        </div>
      </div>
      <div class="row pt-7">
        <div class="col-12">      
          <Stats @title="Lieferadresse" @inline={{true}} as |stats|>
            <stats.row @label="(Firmen) Name" @value="T-Systems International GmbH" />
            <stats.row @label="Zusatz 1" @value="BSP-QS" />
            <stats.row @label="Strasse, Hausnummer" @value="Am Propsthof 49" />
            <stats.row @label="PLZ, Ort" @value="53121, Bonn" />        
            <stats.row @label="Land" @value="Deutschland" />
            <stats.row @label="Private Adresse" @value="Nein" />
          </Stats>
        </div>
      </div>
    </div>
  </div>
  <div class="container z-shopping-cart mt-9">
    <h3>Ihre Bestellung</h3>
    <div class="shadow bg-white">
      <div class="row">
        <div class="col d-flex justify-content-end pt-4 pb-5">
          <BsButton @type="link">Löschen</BsButton>
        </div>
      </div>
      <div class="row">    
        <div class="col-12">    
          <table class="table table-striped table-cart mb-0">
            <thead>
              <tr class="d-none d-lg-flex">
                <th class="col-md-6 col-xl-7 fs-2">Produkte</th>
                <th class="col-md-4 col-xl-3 fs-2">Anzahl</th>
                <th class="col-md-2 col-xl-2 fs-2 text-right">Einmalig (netto)</th>
              </tr>
            </thead>
            <tbody>
              <tr class="d-flex row flex-md-row flex-sm-column mx-0">
                <td class="d-lg-flex d-none col-lg-1 align-items-center justify-content-center">
                  <img src="https://egs-cdn.telekom-dienste.de/product-images/356048de-d4e2-49d8-bbea-157a74841de8/default/apple-iphone-xr-schwarz.png" alt="Apple iPhone XR 64 GB (Schwarz)"/>
                </td>
                <td class="d-flex col-12 col-lg-5 col-xl-6 align-items-start align-items-lg-center justify-content-between">
                  <div>
                    <h6>Apple iPhone XR 64 GB (Schwarz)</h6>
                    <p class="fs-2">Kartentyp: 4 x TripleSIM</p>
                  </div>
                  <BsButton @type="ghost">
                    <i class="ebf ebf-trash fs-2"></i>
                  </BsButton>
                </td>
                <td class="d-flex col-12 col-lg-4 col-xl-3 align-items-center justify-content-between justify-content-lg-start">
                  <Inputs::Counter
                    @label="Anzahl"
                    @placeholder="5"
                    @min="1"
                    @max="999"
                    @value={{this.value}}
                    @onChange={{fn (mut this.value)}}
                    class="w-auto"
                  />
