{{!-- template-lint-disable  --}}
<div class="sticky-top shadow-sm bg-dark border-top-primary pb-4">
  <div class="container">
    <div class="d-flex justify-content-between align-content-center mb-6">
      <p class="text-white mb-0 fs-4">Bestellangaben</p>
      <LinkTo @route="examples.webshop-shopping-cart" class="text-white text-decoration-none">
      Abbrechen <Icon::Ebf @icon="ebf-cancel ml-2" />
    </LinkTo>
    </div>
    <div class="custom-progress-bar">
      <div class="progress-bar-item-container">
        <a href="" class="progress-bar-item active current">
          <span class="progress-dot">1</span>
          <span class="progress-label">Bestellangaben</span>
        </a>     
        <a href="" class="progress-bar-item">
          <span class="progress-dot">2</span>
          <span class="progress-label">Zusammenfassung</span>
        </a>
        <a href="" class="progress-bar-item">
          <span class="progress-dot">3</span>
          <span class="progress-label">Bestätigung</span>
        </a>        
      </div>
      <div class="progress">
        <div
          role="progressbar"
          class="progress-bar bg-primary"
          aria-valuenow="0"
          aria-valuemin="0"
          aria-valuemax="100"
          style="width: 0%;">
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container-fluid bg-gray-100 px-0">
  <div class="container py-5 py-lg-9">    
    <div class="row">
      <div class="col-10">        
        <h2>Bestellangaben</h2>
        <p class="mb-0">Bitte tragen Sie hier die benötigten Bestellinformationen ein</p>
      </div>      
    </div>
  </div>
</div>

<div class="container flex-grow-1 py-5">
  <BsForm class="row" as |form|>    

    <h5 class="mb-4 col-12">Kontaktinformation</h5>
    
    <div class="col-6 mb-5">
      <div class="custom-control custom-radio">
        <input type="radio" class="custom-control-input" id="customRadio1" name="example1" value="customEx">
        <label class="custom-control-label" for="customRadio1">Gespeicherte Rechnungsadressen</label>
      </div>
    </div>

    <div class="col-6 mb-5">
      <div class="custom-control custom-radio">
        <input type="radio" class="custom-control-input" id="customRadio2" name="example1" value="customEx">
        <label class="custom-control-label" for="customRadio2">Neue Adresse eingeben</label>
      </div>
    </div>   

    <form.element
      @label="(Firmen) Name"
      @property="text"
      class="col-6"
      as |el|
    >
      <el.control name="name" placeholder="Prefilled Text" />
    </form.element>

    <form.element
      @label="Zusatz 1"
      @property="text"
      class="col-6"
      as |el|
    >
      <el.control name="name" placeholder="Prefilled Text" />
    </form.element>

    <form.element
      @label="Straße"
      @property="text"
      class="col-6"
      as |el|
    >
      <el.control name="name" placeholder="Prefilled Text" />
    </form.element>

    <form.element
      @label="Hausnummer"
      @property="text"
      class="col-6"
      as |el|
    >
      <el.control name="name" placeholder="Prefilled Text" />
    </form.element>

    <form.element
      @label="PLZ"
      @property="text"
      class="col-2"
      as |el|
    >
      <el.control name="name" placeholder="Prefilled Text" />
    </form.element>

    <form.element
      @label="Ort"
      @property="text"
      class="col-4"
      as |el|
    >
      <el.control name="name" placeholder="Prefilled Text" />
    </form.element>

    <div class="col-6">
      <div class="w-100 d-flex flex-column">
        <label>Land</label>
        <BsDropdown as |dd|>
          <dd.button class="btn btn-outline dropdown-toggle-fw text-left">
            Deutschland           
          </dd.button>
          <dd.menu as |menu|>
            <menu.item>
              <menu.link-to @route="examples.dashboard">Deutschland</menu.link-to>
            </menu.item>
            <menu.item>
              <menu.link-to @route="examples.dashboard">USA</menu.link-to>
            </menu.item>
          </dd.menu>
        </BsDropdown>
      </div>
    </div>

    <h5 class="mb-4 mt-7 col-12">Rechungsmethode</h5>

    <div class="col-6 mb-5">
      <div class="custom-control custom-radio">
        <input type="radio" class="custom-control-input" id="customRadio3" name="example2" value="customEx">
        <label class="custom-control-label" for="customRadio3">E-Mail</label>
      </div>
    </div>

    <div class="w-100"></div>

    <form.element
      @label="E-Mail Adresse"
      @property="email"
      class="col-6"
      as |el|
    >
      <el.control name="email" placeholder="Prefilled Text" />
    </form.element>

    <h5 class="mb-4 mt-7 col-12">Kostenstelle</h5>

    <div class="col-6 mb-5">
      <div class="custom-control custom-radio">
        <input type="radio" class="custom-control-input" id="customRadio4" name="example3" value="customEx">
        <label class="custom-control-label" for="customRadio4">Gespeicherte Kostenstelle</label>
      </div>
    </div>

    <div class="col-6 mb-5">
      <div class="custom-control custom-radio">
        <input type="radio" class="custom-control-input" id="customRadio5" name="example3" value="customEx">
        <label class="custom-control-label" for="customRadio5">Neue Kostenstelle eingeben</label>
      </div>
    </div>

    <div class="col-6">
      <div class="w-100 d-flex flex-column">
        <label>Kostenstelle auswählen</label>
        <BsDropdown as |dd|>
          <dd.button class="btn btn-outline dropdown-toggle-fw text-left">
            Kostenstelle auswählen           
          </dd.button>
          <dd.menu as |menu|>
            <menu.item>
              <menu.link-to @route="">Kostenstelle auswählen 1</menu.link-to>
            </menu.item>
            <menu.item>
              <menu.link-to @route="">Kostenstelle auswählen 1</menu.link-to>
            </menu.item>
          </dd.menu>
        </BsDropdown>
      </div>
    </div>

    <div class="w-100"></div>

    <h5 class="mb-4 mt-7 col-12">Lieferadresse</h5>
    <div class="col-6 mb-5">
      <div class="custom-control custom-radio">
        <input type="radio" class="custom-control-input" id="customRadio6" name="example4" value="customEx">
        <label class="custom-control-label" for="customRadio6">Daten von Rechnungsadresse</label>
      </div>
    </div>
    <div class="col-6 mb-5">
      <div class="custom-control custom-radio">
        <input type="radio" class="custom-control-input" id="customRadio7" name="example4" value="customEx">
        <label class="custom-control-label" for="customRadio7">Neue Adresse eingeben</label>
      </div>
    </div>   
    <form.element
      @label="Firmenname"
      @property="text"
      class="col-6"
      as |el|
    >
      <el.control name="name" placeholder="Prefilled Text" />
    </form.element>

    <form.element
      @label="Zusatz 1"
      @property="text"
      class="col-6"
      as |el|
    >
      <el.control name="name" placeholder="Prefilled Text" />
    </form.element>

    <form.element
      @label="Straße"
      @property="text"
      class="col-6"
      as |el|
    >
      <el.control name="name" placeholder="Prefilled Text" />
    </form.element>

    <form.element
      @label="Hausnummer"
      @property="text"
      class="col-6"
      as |el|
    >
      <el.control name="name" placeholder="Prefilled Text" />
    </form.element>

    <form.element
      @label="PLZ"
      @property="text"
      class="col-2"
      as |el|
    >
      <el.control name="name" placeholder="Prefilled Text" />
    </form.element>

    <form.element
      @label="Ort"
      @property="text"
      class="col-4"
      as |el|
    >
      <el.control name="name" placeholder="Prefilled Text" />
    </form.element>

    <form.element
      @label="Land"
      @property="text"
      class="col-6"
      as |el|
    >
      <el.control name="name" placeholder="Prefilled Text" />
    </form.element>

    <div class="col-6 mb-4 mt-2">
      <div class="custom-control custom-checkbox">
        <input type="checkbox" class="custom-control-input" id="customCheck" name="example1">
        <label class="custom-control-label" for="customCheck">Private Adresse</label>
      </div>
    </div>    
    <div class="col-6 mb-4">
      <div class="custom-control custom-checkbox">
        <input type="checkbox" class="custom-control-input" id="customCheck2" name="example2">
        <label class="custom-control-label" for="customCheck2">Lieferadresse speichern</label>
      </div>
    </div>      
  </BsForm>  
</div>

<div class="container-fluid bg-white shadow">
  <div class="container py-4 d-flex align-items-center justify-content-between">
    <LinkTo @route="examples.webshop-shopping-cart" class="btn btn-ghost">Zurück</LinkTo>    
    <LinkTo @route="examples.summary" class="btn btn-primary">Weiter</LinkTo>    
  </div>
</div>