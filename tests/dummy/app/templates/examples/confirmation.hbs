<div class="sticky-top shadow-sm bg-dark border-top-primary pb-4">
  <div class="container">
    <div class="d-flex justify-content-between align-content-center mb-6">
      <p class="text-white mb-0 fs-4">Bestellangaben</p>
      <LinkTo @route="examples.webshop-shopping-cart" class="text-white text-decoration-none">
      Abbrechen <Icon::Ebf @icon="ebf-cancel ml-2" />
    </LinkTo>
    </div>
    <div class="custom-progress-bar">
      <div class="progress-bar-item-container">
        <a href="" class="progress-bar-item completed">
          <span class="progress-dot"><Icon::Ebf @icon="ebf-check-mark" /></span>
          <span class="progress-label">Bestellangaben</span>
        </a>     
        <a href="" class="progress-bar-item completed">
          <span class="progress-dot"><Icon::Ebf @icon="ebf-check-mark" /></span>
          <span class="progress-label">Zusammenfassung</span>
        </a>
        <a href="" class="progress-bar-item active current">
          <span class="progress-dot">3</span>
          <span class="progress-label">Best채tigung</span>
        </a>        
      </div>
      <div class="progress">
        <div
          role="progressbar"
          class="progress-bar"
          aria-valuenow="0"
          aria-valuemin="0"
          aria-valuemax="100"
          style="width: 100%;">
        </div>
      </div>
    </div>
  </div>
</div>

<div class="container-fluid d-flex flex-grow-1 flex-column bg-gray-100 px-0">
  <div class="container py-5 py-lg-9">    
    <div class="row">
      <div class="col-10">        
        <h2>Best채tigung</h2>
        <p class="mb-0">Ihr Auftrag wurde erfolgreich abgeschickt.</p>
      </div>      
    </div>
  </div>

  <div class="container d-flex flex-column mb-4 mb-lg-9">
    <div class="px-4 pt-2 pb-4 bg-white border">
      <div class="row">
        <div class="col-12">      
          <Stats @title="Auftragsdaten" @inline={{true}} as |stats|>
            <stats.row @label="Bestellnummer" @value="0123456789" />
            <stats.row @label="Erstellt von" @value="Max Mustermann" />
            <stats.row @label="Rahmenvertrag" @value="MN-211" />
          </Stats>
        </div>
      </div>
    </div>
    <BsButton @type="link" class="mt-4 px-0 py-0 align-self-end" @onClick={{fn (mut this.simple) true}}>
      Warenkorb speichern
    </BsButton>
  </div>  
</div>

<BsModal
  @size="md"
  @open={{if this.simple true false}}
  @onSubmit={{fn (mut this.simple) false}}
  @onHidden={{fn (mut this.simple) false}}  
  as |modal| >
  <modal.header class="text-center justify-content-center">
    <h6 class="modal-title mt-5 flex-grow-1">Bestellvorlage speichern</h6>
  </modal.header>
  <modal.body class="py-0">
   <BsForm as |form|>
    <form.element      
      @label="Warenkorb Name"
      @property="text"
      class="mb-0"
      as |el|
    >
      <el.control placeholder="Geben Sie den Namen des Warenkorbs ein..."/>
    </form.element>
    </BsForm>
  </modal.body>
  <modal.footer class="d-flex justify-content-center py-5">
    <BsButton @onClick={{fn modal.close}} @type="outline">Abbrechen</BsButton>
    <BsButton @onClick={{fn modal.close}} @type="primary">Speichern</BsButton>    
  </modal.footer>
</BsModal>

<div class="container-fluid bg-white shadow">
  <div class="container py-4 d-flex align-items-center justify-content-between">    
    <LinkTo @route="examples.summary" class="btn btn-ghost">
      Zur체ck
    </LinkTo>
    <LinkTo @route="examples.orders" class="btn btn-primary">
      Zur Bestell체bersicht
    </LinkTo>
  </div>
</div>