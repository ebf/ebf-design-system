<div class="container-fluid bg-gray-100">
  <div class="container py-9">
    <div class="row">
      <Stats @title="Zusammenfassung" @inline={{true}} class="w-100 col mb-0" as |stats|>
        <stats.row class="font-weight-medium border-top-0">
          <div class="row text-right">
            <div class="col-6">
              Anzahl
            </div>
            <div class="col-6">
              Einmalig
            </div>
          </div>
        </stats.row>
        <stats.row @label="Gesamtpreis (netto)" class="fs-4 font-weight-bold">
          <div class="row text-right">
            <div class="col-12 text-primary">
              7.825,65 €
            </div>
          </div>
        </stats.row>
        <stats.row @label="Gesamtpreis (brutto)" class="fs-4 font-weight-medium">
            <div class="row text-right">
              <div class="col-6">
                1
              </div>
              <div class="col-6">
                7.900,65 €
              </div>
            </div>
          </stats.row>
          <stats.row @label="Enthaltene Mehrwertsteuer" class="fs-4 font-weight-medium">
            <div class="row text-right">
              <div class="col-6">
                1
              </div>
              <div class="col-6">
                75 €
              </div>
            </div>
          </stats.row>
      </Stats>      
    </div>
  </div>
</div>

